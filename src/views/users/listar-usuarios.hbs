<div class="row">
    {{#each users}}
        <div class="col-md-3">
            <div class="card text-dark bg-light border-info mb-3">
                <div class="card-header">
                    <img src="/img/user.png" 
                         class="rounded-circle mx-auto d-block m-4 logo"
                         alt="logo"> 
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        <p><i class="fas fa-file-signature"></i> {{nombre}}</p>
                        <p>
                            <a href="/users/edit:{{_id}}"><i class="fas fa-user-cog"></i>
                            </a>
                            <a href="/users/delete:{{_id}}"><i class="fas fa-user-minus"></i></a>
                        </p>
                    </h4>
                </div>
                <div class="card-body">
                   <p><i class="far fa-envelope"></i> {{email}}</p>
                   <p><i class="fas fa-unlock-alt"></i> {{password}}</p>

                   {{#unless tipo}}
                      <p>Tipo de usuario: <i class="fas fa-user-tie"></i> Administrador</p>
                   {{else}}
                      <p>Tipo de usuario: <i class="far fa-user"></i> Regular</p>
                   {{/unless}}
                </div>
            </div>
        </div>
    {{else}}
        <div class="col-md-6">
            <div class="card text-dark bg-light border-info mb-3">
                <div class="card-header">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        No existen usuarios en la base de datos
                    </h4>
                </div>
            </div>
        </div>        
    {{/each}}
</div>
